---
import Base from './base.astro'
import Nav from '../components/nav.astro'
import '../styles/default.scss'

interface ComponentProps {
    title: string
    description: string
}

type Props = {
    frontmatter: ComponentProps
} | ComponentProps

const { title, description } = "frontmatter" in Astro.props ? Astro.props.frontmatter : Astro.props
---
<Base title={title} description={description}>
    <nav class="dynamic-bg flex justify-between items-center w-screen h-20 p-3">
        <Nav showLogo />
    </nav>
    <div class="content max-w-full mx-auto py-10 px-3">
        <slot />
    </div>
</Base>
